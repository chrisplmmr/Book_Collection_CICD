<%= link_to("<< Back to List", books_path, :class => "back-link")%>

<div>
    <h2>Delete a Book</h2>

    <%= form_for(@book, :method => 'delete') do |f| %>

        <p>?!?Are you sure you want to delete this book?!?</p>
        <p><%= @book.title %></p>
        <div class="form-buttons">
            <%= f.submit("Delete Book") %>
        </div>

    <% end %>
</div>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
